{
    "name": "pwerken/va-void",
    "description": "Vortex Adventures - Vortex Online Incharacter Database",
    "homepage": "https://github.org/pwerken/va-void",
    "type": "project",
    "license": "ISC",
    "require": {
        "php": ">=8.2",
        "bacon/bacon-qr-code": "^3.0",
        "cakephp/authentication": "^3.0.0",
        "cakephp/authorization": "^3.0.0",
        "cakephp/cakephp": "5.2.*",
        "cakephp/migrations": "@stable",
        "cakephp/plugin-installer": "^2.0",
        "firebase/php-jwt": "^6.5",
        "jeremyharris/cakephp-lazyload": "^5.0",
        "setasign/fpdf": "^1.8",
        "socialconnect/auth": "^3.3"
    },
    "require-dev": {
        "cakedc/cakephp-phpstan": "^4.0",
        "cakephp/cakephp-codesniffer": "^5.0",
        "composer/composer": "^2.8",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^10.5.5 || ^11.1.3 || ^12.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "RPDF\\": "plugins/rpdf/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "cakephp/plugin-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform-check": true,
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": "App\\Console\\Installer::postInstall",
        "post-create-project-cmd": "App\\Console\\Installer::postInstall",
        "check": [
            "@cs-check",
            "@stan",
            "@test"
        ],
        "cs-check": "phpcs --colors -p",
        "cs-fix": "phpcbf --colors -p",
        "stan": "phpstan analyse",
        "test": "phpunit --colors=always",
        "test:coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "@test --coverage-html webroot/coverage"
        ]
    }
}
